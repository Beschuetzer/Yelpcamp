<%- include("partials/header") %>

<div class="container text-center mt-5">
  <div class="formContainer">
    <h1 class="title">Create a New Campground</h1>

    <form action="/campgrounds" method="post" class="text-center">
      <label for="name" class="newCampgroundLabel">Campground Name:</label>
      <input type="text"class="form-control" name="name" id="name" class="" placeholder="Enter a Campground Name">
      <label for="image" class="newCampgroundLabel">Image Url of Campsite:</label>
      <input type="text"class="form-control" name="image" id="image" class="form-control" placeholder="URL to an Image of the Campsite">
      <label for="image" class="newCampgroundLabel">Description of Campsite:</label>
      <input maxlength="78" placeholder="Enter a Description of the Campsite" class="form-control" name="description">
      <button class="btn btn-primary btn-sm" type="submit">Submit</button>
    </form>

    <a href="/campgrounds">View All Campgrounds</a>
  </div>
</div>

<%- include("partials/footer") %>


