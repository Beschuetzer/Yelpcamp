<%- include("partials/header") %>



<div id="topContainer" class="container text-center">
  <header class="jumbotron mb-0">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View Our Hand-Picked Campgrounds from all over the Planet.</p>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a Campground</a>
      </p>
    </div>
  </header class="jumbotron text-align-center">

  <div class="row justify-content-center">
    <% campgrounds.forEach((campground) => { %>
      <% console.log(campground); %>
      <div class="campground col-md-6 col-lg-4 col-xl-3">
        <div class="card w-100 mt-4">
          <div class="card-img-top" style="background: url(<%= campground.image %>);">
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= campground.name %></h5>
            <% if (campground.description.length > 78) {%>
                <p class="card-text"><%- campground.description.slice(0,75) + '...'%></p>
            <% } else { %>
              <p class="card-text"><%- campground.description %></p>
              <% } %>
            <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include("partials/footer") %>
