<%- include("../partials/header") %>

<div class="container-fluid text-center title">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card bg-light">
        <img class="img-fluid" id="showImg" src="<%= campground.image %>"></img>
        <div class="caption-full px-3">
          <h4 class="pull-right">$9.50/night</h4>
          <a href="#"><h4 class="pull-left"><%= campground.name %></h4></a>
        </div>
        <p class="lead mt-3 w-100 text-justify px-3"><%- campground.description %></p>
        <div class="card-body buttons pt-1">
          <a class="btn btn-md btn-primary buttonWidth" href="/campgrounds/<%= campground._id %>/edit" type="submit">Edit</a>
          <form class="text-left" action="/campgrounds/<%= campground._id %>?_method=delete" method="post">
            <button class="btn btn-md btn-danger buttonWidth" type="submit">Delete</button>
          </form>	
          <a class="btn btn-md btn-success buttonWidth" href="/campgrounds/<%= campground._id %>/comments/new" >Add Comment</a>
        </div>
      </div>
      <h2>Comments:</h2>
      <div class="card">
      <% campground.comments.forEach((comment) => { %>
      <%   console.log(comment); %>
        <div class="comment">
          <span class="author mb-1 mt-3"><%= comment.author %></span> 
          <span class="dateCreated mt-3">10 days ago</span>
          <p class="commentText mb-3"><%= comment.text %></p>
        </div>
        <hr class="m-0">
        <% }); %>
      </div>
    </div>
  </div>
</div>
   

<%- include("../partials/footer") %>me