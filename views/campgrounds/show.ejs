<%- include("../partials/header") %>

<div class="container-fluid mt-5 text-center title">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div id="showMain" class="col-md-9">
      <div class="card bg-lessLight">
        <img class="img-fluid" id="showImg" src="<%= campground.image %>"></img>
        <div class="caption px-0 mt-4">
          <a href="#"><h4 class="name mb-0"><%= campground.name %></h4></a>
          <h4 class="price">$9.50/night</h4>
        </div>
        <div class="author ml-0">
          <h6 class="text-white"><em>by <a href="#"><%= campground.author.username %></em></h6></a>
          <div class="hidden"></div>
        </div>
        <p class="lead mt-3 w-100 text-justify text-white px-0"><%- campground.description %></p>
        <div class="card-body buttons pt-1">
          <a class="btn btn-md btn-outline-warning buttonWidth" href="/campgrounds/<%= campground._id %>/edit" type="submit">Edit</a>
          <form class="text-left" action="/campgrounds/<%= campground._id %>?_method=delete" method="post">
            <button class="btn btn-md btn-outline-danger buttonWidth" type="submit">Delete</button>
          </form>	
        </div>
      </div>
      <div class="transition">

      </div>
      <div class="card">
        <div id="commentButtonDiv">
          <div class="hidden"></div>
          <a id="commentButton" class="btn btn-md btn-outline-success" href="/campgrounds/<%= campground._id %>/comments/new">Leave a Review</a>
        </div>
        <hr class="m-0 styleHRTop">
        <% campground.comments.forEach((comment) => { %>
        <hr class="m-0 styleHRComments">
        <div class="comment">
          <span class="author mt-3 ml-0 mb-0"><strong><%= comment.author.username %></strong></span> 
          <span class="dateCreated mt-3"><em>10 days ago</em></span>
          <p class="commentText mb-3"><%= comment.text %></p>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
   

<%- include("../partials/footer") %>me