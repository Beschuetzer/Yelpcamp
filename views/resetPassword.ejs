<%- include("./partials/header") %>
    <div class="container ">
        <div class="jumbotron text-center mb-3">
            <h1>Reset Your Password</h1>
        </div>
        <div class="" id="pwdResetForm">
            <form action="/resetPassword" method="post">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input class="form-control" required autofocus type="email" name="email" id="pwdResetEmail" placeholder="Enter the Email for the Account">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-md btn-primary w-100">Reset</button>
                </div>
            </form>
        </div>
        
    </div>
<%- include("./partials/footer") %>