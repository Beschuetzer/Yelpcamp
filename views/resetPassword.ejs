<%- include("./partials/header") %>
    <div class="container ">
        <% if (successMessage[0] || errorMessage[0]) {%>
        <div class="jumbotron text-center mb-3 mt-0">
        <% } else {%>
        <div class="jumbotron text-center mb-3">
        <% } %>
            <h1>Reset Your Password</h1>
        </div>
        <div class="" id="pwdResetForm">
            <form action="/resetPassword/<%= token %>" method="post">
                <div class="form-group">
                    <label for="email">New Password:</label>
                    <input class="form-control mb-0" required autofocus type="password" name="password" id="pwdResetEmail" placeholder="Enter a new password">
                    <div class="formCheckbox">
                        <input id="passwordCheckbox" class="form-check-input" type="checkbox" onclick="togglePasswordVisibility(`pwdResetEmail`)">
                        <small for="passwordCheckbox" class="mt-0 form-check-label">Show Password</small>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Confirm Password:</label>
                    <input class="form-control mb-0" required autofocus type="password" name="passwordConfirmed" id="pwdResetEmailConfirmed" placeholder="Confirm the new password">
                    <div class="formCheckbox">
                        <input id="passwordCheckbox" class="form-check-input" type="checkbox" onclick="togglePasswordVisibility(`pwdResetEmailConfirmed`)">
                        <small for="passwordCheckbox" class="mt-0 form-check-label">Show Password</small>
                    </div>
                </div>
                <div class="form-group">
                    <button id="submitButton" type="submit" class="btn btn-md btn-primary w-100">Reset</button>
                </div>
            </form>
        </div>
    </div>
<%- include("./partials/footer") %>